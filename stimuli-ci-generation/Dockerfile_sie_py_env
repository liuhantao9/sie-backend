# install python and run server
# build from sie_base image which installs R libraries

# please tag this image with "sie_py_server"

FROM sie_base

RUN apt-get update && apt-get install -y \
    --no-install-recommends build-essential \
	python3.6 python3-pip python3-setuptools python3-dev

WORKDIR /app

COPY . /app

EXPOSE 8080

ENTRYPOINT ["python3", "server.py"] 
